<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/instruction_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/instruction_play"
        android:textSize="24sp" />

    <RadioGroup
        android:id="@+id/button_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RadioButton
            android:id="@+id/Button1"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="180dp"
            android:layout_height="168dp"
            android:scaleType="fitXY"
            android:rotation="0"
            android:layout_gravity="center_horizontal"
            android:button="@null"
            android:background="@drawable/cup"
            android:contentDescription="@string/cup1" />

        <RadioButton
            android:id="@+id/Button2"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="180dp"
            android:layout_height="168dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/cup2"
            android:button="@null"
            android:background="@drawable/cup"
            android:rotation="0"
            android:scaleType="fitXY" />

        <RadioButton
            android:id="@+id/Button3"
            android:contentDescription="@string/cup3"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="180dp"
            android:layout_height="168dp"
            android:scaleType="fitXY"
            android:rotation="0"
            android:layout_gravity="center_horizontal"
            android:button="@null"
            android:background="@drawable/cup" />
    </RadioGroup>


</LinearLayout>