<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textview_cup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/msg_cup"
        android:textSize="24sp" />


    <ImageButton
        android:id="@+id/button1_cup"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitXY"
        android:rotation="0"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/cup"
        android:contentDescription="@string/cup1" />

    <ImageButton
        android:id="@+id/button2_cup"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="12dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/cup2"
        android:background="@drawable/cup"
        android:rotation="0"
        android:scaleType="fitXY" />

    <ImageButton
        android:id="@+id/button3_cup"
        android:contentDescription="@string/cup3"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitXY"
        android:rotation="0"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/cup" />

</LinearLayout>