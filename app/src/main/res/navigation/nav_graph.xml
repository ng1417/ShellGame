<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/navigation_cup">

    <fragment
        android:id="@+id/navigation_cup"
        android:name="com.cs211d.shellgame.CupFragment"
        android:label="@string/title_cup"
        tools:layout="@layout/fragment_cup" >
        <action
            android:id="@+id/cup_to_result"
            app:destination="@id/navigation_result" />
    </fragment>

    <fragment
        android:id="@+id/navigation_result"
        android:name="com.cs211d.shellgame.ResultFragment"
        android:label="@string/title_result"
        tools:layout="@layout/fragment_result" >
        <argument
            android:name="buttonClicked"
            android:defaultValue="1"
            app:argType='integer'/>
        <argument
            android:name="isWin"
            android:defaultValue="false"
            app:argType='boolean' />
    </fragment>

</navigation>