<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CupsFragment">

    <TextView
        android:id="@+id/welcome_text_0"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/welcome_1"
        android:textAlignment="center"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/welcome_text_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/welcome_2"
        android:textAlignment="center"
        android:textSize="40sp" />

    <ImageButton
        android:id="@+id/cup_button_0"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        style="?android:attr/borderlessButtonStyle"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/cup" />

    <ImageButton
        android:id="@+id/cup_button_1"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        style="?android:attr/borderlessButtonStyle"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/cup" />

    <ImageButton
        android:id="@+id/cup_button_2"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        style="?android:attr/borderlessButtonStyle"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/cup" />

</LinearLayout>